    <br />
    <label>
      color - $60
      <input type="checkbox" id="service" name="service" value="color+60" />
    </label>
    
    <br />

    <h2>Select day and time</h2>

    <label>Select day:
      <input type="date" name="date" />
    </label>
    <br />
    <label>Select time:
      <input
        type="time"
        name="time"
        value="09:00:00"
        min="09:00:00"
        max="19:00:00"
      />
    </label>
    <br />

    <h2>Contact</h2>

    <label>Phone number:
      <input type="number" name="contact" />
    </label>
    <br />
    <br />
    <input type="submit" value="Request booking" />

  </form>
  {{#if errorMessage}}
    {{errorMessage}}
  {{/if}}
