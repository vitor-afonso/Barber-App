<div>

  <form action="/booking" method="post">

    <h2>Select service</h2>
<label>
    <label>
      Haircut - $60
      <input type="checkbox" id="service" name="service" value="haircut+60" />
    </label>
    <br />
    <label>
      Beard - $45
      <input type="checkbox" id="service" name="service" value="beard+45" />
    </label>
    <br />
    <label>
      Haircut and Beard - $90
      <input
        type="checkbox"
        id="service"
        name="service"
        value="Haircut&Beard+90"
      />
    </label>
    <br />
    <label>
      Haircut and Color $100
      <input
        type="checkbox"
        id="service"
        name="service"
        value="Haircut&color+120"
      />
