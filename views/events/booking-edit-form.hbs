<header>
  <nav>
    <a href="/">Home</a>
    <a href="/profile">Profile</a>
    <a href="/logout">Logout</a>
  </nav>
</header>
<br> <br>
<div>
    <form action="/profile/{{bookingID}}/booking/edit" method="post">

    <h2>Select service</h2>
       
        {{#if pendingBookings}}   
            {{#each pendingBookings}} 
                {{#each selectedServices}} 

                        <label> {{shortServiceName}}
                            <input type="checkbox" checked name="service" value="{{fullServiceName}}"/>
                        </label> 
                        <br>
                {{/each}}
                {{#each unselectedServices}} 
                        <label> {{shortServiceName}}
                            <input type="checkbox" name="service" value="{{fullServiceName}}"/>
                            
                        </label> 
                        <br>
                {{/each}}

                <br />

                <h2>Select day and time</h2>

                <label>Select day:
                    
                    <input type="date" name="date" value="{{eventYear}}-{{eventMonth}}-{{eventDay}}"/> 
                    
                </label>
                <br />
                <label>Select time:
                <input
                    type="time"
                    name="time"
                    value="{{eventHour}}:{{eventMin}}:00"
                    min="09:00:00"
                    max="19:00:00"
                />
                </label>
                <br />

                <h2>Contact</h2>

                <label>Phone number:
                    <input type="number" name="contact" value="{{contact}}"/>
                </label>
                
                <h2>Message</h2>

                <label>
                    <textarea name="message" rows="4" cols="30"> 
                        {{message}}
                    </textarea>
                </label>
                <br />
            {{/each}}
            
        {{/if}}

        {{#if confirmedBookings}}   
            {{#each confirmedBookings}} 
            
                {{#each selectedServices}} 
                        <label> {{shortServiceName}}
                            <input type="checkbox" checked name="service" value="{{fullServiceName}}"/>
                        </label> 
                        <br>
                {{/each}}
                {{#each unselectedServices}} 
                        <label> {{shortServiceName}}
                            <input type="checkbox" name="service" value="{{fullServiceName}}"/>
                            
                        </label> 
                        <br>
                {{/each}}

                <br />

                <h2>Select day and time</h2>

                <label>Select day:
                    
                    <input type="date" name="date" value="{{eventYear}}-{{eventMonth}}-{{eventDay}}"/> 
                    
                </label>
                <br />
                <label>Select time:
                <input
                    type="time"
                    name="time"
                    value="{{eventHour}}:{{eventMin}}:00"
                    min="09:00:00"
                    max="19:00:00"
                />
                </label>
                <br />

                <h2>Contact</h2>

                <label>Phone number:
                    <input type="number" name="contact" value="{{contact}}"/>
                </label>
                
                <h2>Message</h2>

                <label>
                    <textarea name="message" rows="4" cols="30"> 
                        {{message}}
                    </textarea>
                </label>
                <br />
            {{/each}}
        {{/if}}

        <button type="submit">Update Booking</button> <a href="#">Cancel</a>

    </form>
</div>