<header>
  <nav>

    <a href="/">Home</a>
    <a href="/signup">Signup</a>

  </nav>
</header>

<div id="login-container">
  <h1>Login page</h1>
  <form action="/login" method="POST">
    <label>
      Email
      <input type="email" name="email" />
    </label>
    <label>
      Password
      <input type="password" name="password" />
    </label>

    <button type="submit">Submit</button>
  </form>

  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</div>