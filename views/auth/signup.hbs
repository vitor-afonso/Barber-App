
<div id="signup-container">
  <form action="/signup" method="POST">
    <h2>Signup</h2>
    <label>
      Username
      <input type="text" name="username" />
    </label>
    <label>
      Email
      <input type="email" name="email" />
    </label>
    <label>
      Password
      <input type="password" name="password" />
    </label>
    <button type="submit">Signup</button>
  </form>

  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}

</div>