
<div id="signup-container">

   <form action="/signup" method="POST">
      <label> Username
         <input type="text" name="username">
      </label>
      <label> Email
         <input type="email" name="email">
      </label>
      <label> Password
         <input type="password" name="password">
      </label>
      <button type="submit">Submit</button>
   </form>

   {{#if errorMessage}}
      {{errorMessage}}
   {{/if}}

</div>