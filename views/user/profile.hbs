<div id="profile-container">
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/booking">Booking</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>
  <h1>Profile page</h1>

  <section id="profile-top">
    <div>

      <div><b>Username:</b> <span>{{user.username}}</span></div>
      <div><b>Email:</b> <span>{{user.email}}</span></div>
      <div><b>Password:</b> <span>********</span></div>
      <div><b>Contact</b> <span>{{user.contact}}</span></div>

    </div>

    <div>
      <img src="{{user.imageUrl}}" alt="profile image" width="150" />

      <form action="/profile/{{user._id}}/edit" method="post">
        <button type="submit">Edit profile</button>
      </form>
    </div>
  </section>

  {{#if user.events}}
    <section id="profile-mid">

      {{#if pendingBookings}}
        <h3>Pending bookings</h3>
        <div>
          {{#each pendingBookings}}
            <div>
              <div><b>Service:</b> <span>{{this.service}}</span></div>
              <div>
                <b>Date:</b>
                <span>{{eventDay}}-{{eventMonth}}-{{eventYear}}</span></div>
              <div> <b>Time:</b> <span>{{eventHour}}:{{eventMin}}H</span></div>
              <div> <b>Status:</b> <span>{{this.reqStatus}}</span></div>

              <div>
                <a href="/profile/{{../user._id}}/booking/edit">Edit</a>
                <a href="/profile/{{../user._id}}/booking/delete">Cancel</a>
              </div>
            </div>
            <br />
          {{/each}}
        </div>
      {{/if}}
      <hr />

      {{#if confirmedBookings}}
        <h3>Confirmed bookings</h3>
        <div>
          {{#each confirmedBookings}}
            <div>
              <div><b>Service:</b> <span>{{this.service}}</span></div>
              <div>
                <b>Date:</b>
                <span>{{eventDay}}-{{eventMonth}}-{{eventYear}}</span></div>
              <div> <b>Time:</b> <span>{{eventHour}}:{{eventMin}}H</span></div>
              <div> <b>Status:</b> <span>{{this.reqStatus}}</span></div>

              <div>
                <a href="/profile/{{../user._id}}/booking/edit">Edit</a>
                <a href="/profile/{{../user._id}}/booking/delete">Cancel</a>
              </div>
            </div>
            <br />
          {{/each}}
        </div>
        <hr />
      {{/if}}

      {{#if previousBookings}}

        <h3>Booking history</h3>
        <div>
          <div>
            {{#each previousBookings}}
              <div><b>Service:</b> <span>{{service}}</span></div>
              <div>
                <b>Date:</b>
                <span>{{eventDay}}-{{eventMonth}}-{{eventYear}}</span></div>
              <div> <b>Time:</b> <span>{{eventHour}}:{{eventMin}}H</span></div>
              <br>
            {{/each}}
          </div>
          <br />
        </div>

      {{/if}}
      <hr />
    </section>
  {{/if}}

</div>